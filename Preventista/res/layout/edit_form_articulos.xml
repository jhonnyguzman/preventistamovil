<?xml version="1.0" encoding="utf-8"?>

    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <RelativeLayout
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" 
		android:orientation="vertical">
		
	    <ScrollView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/lyFoodBotonera">
	            
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		    	
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Id"
		            android:textSize="18sp" />
		        <EditText
		            android:id="@+id/edtIdArticulo"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:inputType="number"
		            android:ems="10" />
		        
		    	<TextView
		            android:id="@+id/textView5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Rubro"
		            android:textSize="18sp" />
		        
		        <Spinner android:id="@+id/CmbRubrosEditArticulo"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" />
		
		        <TextView
		            android:id="@+id/textView6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Marca"
		            android:textSize="18sp" />
		        
		        <Spinner android:id="@+id/CmbMarcasEditArticulo"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" />
		        
		        <TextView
			        android:id="@+id/textView2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="DescripciÃ³n"
			        android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/edtDescripcionArticulo"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:ems="10" android:inputType="textCapCharacters"/>
				 <requestFocus />
		        <TextView
		            android:id="@+id/textView3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Precio de compra"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/edtPrecioCompraArticulo"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:inputType="numberDecimal"
		            android:ems="10" />
		
		        <TextView
		            android:id="@+id/textView4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Stock real"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/edtStockRealArticulo"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="number"
		             />
		        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		            android:orientation="horizontal" android:layout_marginTop="5px">
			        <TextView
			            android:id="@+id/textView6"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="%1"
			            android:textSize="18sp" />
			
			        <EditText
			            android:id="@+id/edtPorcentaje1Articulo"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:inputType="numberDecimal" 
			            android:width="140sp"/>
			        
			        <TextView
			            android:id="@+id/textView6"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="PV1"
			            android:textSize="18sp"
			           />
			
			        <EditText
			            android:id="@+id/edtPrecio1Articulo"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:inputType="numberDecimal"
			            android:width="140sp" />
		        </LinearLayout>
		        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		            android:orientation="horizontal" android:layout_marginTop="5px">
			        
		            <TextView
		            android:id="@+id/textView6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="%2"
		            android:textSize="18sp" />
		
			        <EditText
		            android:id="@+id/edtPorcentaje2Articulo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="numberDecimal"
		            android:width="140sp" />
			        
			        <TextView
		            android:id="@+id/textView6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="PV2"
		            android:textSize="18sp" />
		
			        <EditText
		            android:id="@+id/edtPrecio2Articulo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="numberDecimal"
		            android:width="140sp" />
	
				 </LinearLayout>  
		         <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		            android:orientation="horizontal" android:layout_marginTop="5px">
		        	
		             <TextView
			            android:id="@+id/textView6"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="%3"
			            android:textSize="18sp" />
			
			        <EditText
			            android:id="@+id/edtPorcentaje3Articulo"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:inputType="numberDecimal"
			            android:width="140sp" />
			        
			        <TextView
			            android:id="@+id/textView6"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="PV3"
			            android:textSize="18sp" />
			
			        <EditText
			            android:id="@+id/edtPrecio3Articulo"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:inputType="numberDecimal"
			            android:width="140sp" />
	
		        </LinearLayout>
		        
		    </LinearLayout>
		
		</ScrollView>
	
	    <LinearLayout
	        android:id="@+id/lyFoodBotonera"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:weightSum="10">
	
	        <Button
	            android:id="@+id/btnSaveEditArticulo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/lblBtnSaveEditArticulo"
	            android:layout_weight="5" android:drawableLeft="@drawable/save25x25"/>
	
	        <Button
	            android:id="@+id/btnCancelEditArticulo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/lblBtnCancelEditArticulo"
	            android:layout_weight="5" android:drawableLeft="@drawable/cancel25x25"/>
	
	    </LinearLayout>
    
    </RelativeLayout>

</LinearLayout>
