<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="20">
 
	<TextView android:id="@+id/lblDeudasPagadasIdListItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="6"
	    android:textSize="15sp" android:padding="2px"
	    android:width="52dp"/>
	<TextView android:id="@+id/lblDeudasPagadasFechaListItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="7"
	    android:textSize="15sp" android:padding="2px"
	    android:width="100dp"/>
	<TextView android:id="@+id/lblDeudasPagadasMontoTotalListItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="5"
	    android:textSize="15sp" android:padding="2px"
	    android:width="70dp"/>
	<TextView android:id="@+id/lblDeudasPagadasMontoAdeudadolListItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:textSize="15sp" android:padding="2px"
	    android:width="70dp"/>
    
</LinearLayout>