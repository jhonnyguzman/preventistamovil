<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:weightSum="10">
 
<TextView android:id="@+id/lblApellidoNombreListItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:textSize="17sp" android:width="600sp" android:padding="5px"/>
<TextView android:id="@+id/lblCatClienteListItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="7"
    android:textSize="17sp" android:width="600sp" android:padding="5px"/>
 
<TextView android:id="@+id/lblIdListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
  />
<TextView android:id="@+id/lblCatClienteIdListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
  />
</LinearLayout>